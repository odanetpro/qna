$('.question-errors').html('<%= render 'shared/errors', resource: question %>')

<% unless question.errors.present? %>
  $('.question').children('h1').html('<%= j question.title %>')
  $('.question').children('#question-body').html('<%= j question.body %>')

  <% if question.files.attached? %>
    $('.question-attachments').html('<%= j render partial: 'questions/file', collection: question.files %>')
  <% end %>

  <% if question.links.present? %>
    $('.question-links').html('<ul><%= j render partial: 'shared/link', collection: question.links %></ul>')
  <% end %>

  $('.question-edit-form').html('<%= j render partial: 'questions/edit_form' %>')
  $('.edit-question-link').removeClass('hidden')
  $('.delete-question-link').removeClass('hidden')
<% end %>
