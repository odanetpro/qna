.question
  h1= question.title
  div id = "question-body"
    = question.body
    
  .question-attachments
    - if question.files.attached?
      = render partial: 'questions/file', collection: question.files

  .question-controls
    - if question.author_id == current_user&.id
      = link_to 'Edit', '#', class: 'edit-question-link'
      |  
      = link_to 'Delete',
                question_path(question),
                method: :delete,
                class: 'delete-question-link',
                data: { confirm: t('.confirm') }

    .question-errors

    = form_with model: question, class: 'hidden', html: { id: "edit-question" }, local: false do |f|
      p
        = f.label :title
        br
        = f.text_field :title
      p
        = f.label :body
        br
        = f.text_area :body
      p
        = 'Add files'
        br
        = f.file_field :files, multiple: true, direct_upload: true
      p= f.submit 'Save'

p= link_to 'To questions', questions_path

p= 'Answers'
ol.answers
  = render partial: 'answers/best_answer', locals: { answer: best_answer } if question.best_answer_id
  = render partial: 'answers/answer', collection: other_answers

= render 'answers/form'
