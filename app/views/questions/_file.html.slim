p id= "file-#{file.id}"
  = link_to file.filename.to_s, url_for(file)
  - if question.author_id == current_user&.id
    |  
    = link_to svg_icon_remove_file,
              delete_file_question_path(question, file),
              method: :delete,
              remote: true,
              class: 'remove-file text-danger',
              data: { confirm: 'Are you sure?' }
