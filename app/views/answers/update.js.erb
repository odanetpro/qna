$('#answer-errors-<%= answer.id %>').html('<%= render 'shared/errors', resource: answer %>')

<% unless answer.errors.present? %>
  $('#answer-body-' + <%= answer.id %>).html('<%= j simple_format(answer.body) %>')
  
  <% if answer.files.attached? %>
    $('.answer-' + <%= answer.id %>).find('#answer-attachments-' + <%= answer.id %>).html('<%= j render partial: 'answers/file', collection: answer.files, locals: { answer: answer } %>')
  <% end %>

  <% if answer.links.present? %>
    $('#answer-links-<%= answer.id %>').html('<ul><%= j render partial: 'shared/link', collection: answer.links %></ul>')
  <% end %>

  $('#answer-edit-form-' + <%= answer.id %>).html('<%= j render partial: 'answers/edit_form', locals: { answer: answer } %>')
  $('.answer-' + <%= answer.id %>).find('.edit-answer-link').removeClass('hidden')
  $('.answer-' + <%= answer.id %>).find('.delete-answer-link').removeClass('hidden')
  $('.answer-' + <%= answer.id %>).find('.best-answer-link').removeClass('hidden')
<% end %>
